{{#section "js"}}
  <script src="../../static/js/login.js"></script>
{{/section}}
<div class="col-md-6 col-lg-7 d-flex align-items-center" id="form-bg">
  <div class="card-body p-4 p-lg-5 text-black" id="form-text">
    <form id="loginForm" action="">
      <div class="d-flex align-items-center mb-3 pb-1">
      </div>

      <h1 class="fw-normal mb-3 pb-3">
        Đăng nhập
      </h1>

      <div class="form-outline mb-4">
        <label class="form-label" for="txtUsername">
          Email
        </label>
        <input
          type="txt"
          id="txtUsername"
          class="form-control form-control-lg"
          name="username"
          autofocus
        />
      </div>

      <div class="form-outline mb-1">
        <label class="form-label" for="txtPassword">
          Mật khẩu
        </label>
        <input
          type="password"
          id="txtPassword"
          class="form-control form-control-lg"
          name="password"
          autofocus
        />
      </div>
      <div class="pt-1 mb-4">
        <a class="small text-muted" href="/forgotPassword">
          Quên mật khẩu?
        </a>
      </div>

      <div class="pt-1 mb-4">
        <button class="btn btn-dark btn-lg btn-block" type="submit">
          Đăng nhập
        </button>
      </div>

      <footer>
        <a href="#!" class="small text-muted">
          Điều khoản sử dụng.
        </a>
        <a href="#!" class="small text-muted">
          Chính sách bảo mật.
        </a>
      </footer>
    </form>
  </div>
</div>