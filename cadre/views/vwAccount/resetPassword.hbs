{{#section 'js'}}
  <script src='../../static/js/resetPassword.js'></script>
{{/section}}
<div class='col-md-6 col-lg-7 d-flex align-items-center' id='form-bg'>
  <div class='card-body p-4 p-lg-5 text-black' id='form-text'>
    <form id='forgotPasswordForm' action=''>
      <div class='d-flex align-items-center mb-3 pb-1'>
      </div>

      <h1 class='fw-normal mb-3 pb-3' style='letter-spacing: 1px;'>
        Đặt lại mật khẩu
      </h1>

      <div class='form-outline mb-4'>
        <label class='form-label' for='txtUsername'>
          Mật khẩu mới
        </label>
        <input type='password' id='txtPassword' class='form-control form-control-lg' name='password' autofocus />
      </div>

      <div class='form-outline mb-4'>
        <label class='form-label' for='txtUsername'>
          Xác nhận mật khẩu
        </label>
        <input type='password' id='txtPasswordConfirm' class='form-control form-control-lg' name='password' autofocus />
      </div>

      <div class='pt-1 mb-4'>
        <button class='btn btn-dark btn-lg btn-block' type='submit'>
          Đặt lại mật khẩu
        </button>
      </div>
    </form>
  </div>
</div>