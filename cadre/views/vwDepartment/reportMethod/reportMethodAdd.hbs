{{#section 'js'}}
<script src="../../../static/js/department/reportMethods.js"></script>
{{/section}}

<div id="wrapper">
  <!-- Sidebar -->
  <ul
    class="navbar-nav sidebar sidebar-dark accordion"
    id="accordionSidebar"
    style="background: linear-gradient(45deg, #5c7ea1, #509177);"
  >
    <!-- Sidebar - Brand -->
      {{> sidebarDepartment}}


  </ul> 
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-3 fw-light fs-5">
                            <b>Thêm Phương Thức Báo Cáo</b>
                        </h5>
                        <form action="/api/v1/reportMethods" method="post">
                            <div class="form-floating mb-5">
                                <input type="txt" class="form-control"
                                    id="reportMethod" name="reportMethod"
                                    placeholder="Tố giác vi phạm">
                                <label for="reportMethod" id="requiredReportMethod">Phương thức báo cáo</label>
                            </div>

                            <div class="d-grid">
                                <button
                                    class="btn btn-primary btn-login text-uppercase fw-bold"
                                    type="submit">Thêm Mới</button>
                            </div>
                        </form>
                        <div class="d-grid mt-3">
                            <a href="/reportMethods" class="btn btn-danger btn-login text-uppercase fw-bold">Quay Lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
