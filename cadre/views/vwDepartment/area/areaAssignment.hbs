{{#section 'css'}}
<link rel='stylesheet' href='../../static/css/reports.css' />
{{/section}}

<div id="wrapper">
    <!-- Sidebar -->
    <ul
        class="navbar-nav sidebar sidebar-dark accordion"
        id="accordionSidebar"
        style="background: linear-gradient(45deg, #5c7ea1, #509177);">
        <!-- Sidebar - Brand -->
        {{> sidebarDepartment}}

    </ul>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-lg-12'>
                <div class='main-box clearfix'>
                    <div class='table-responsive'>
                        <table class='table user-list'>
                            <thead>
                                <tr>
                                    <th>
                                        Thông tin tài khoản
                                    </th>
                                    <th>
                                        Họ tên
                                    </th>
                                    <th>
                                        Chức vụ
                                    </th>
                                    <th>
                                        Chi tiết
                                    </th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody class='reports-list'>
                                {{#if data}}
                                {{#each data}}
                                <tr>
                                    <td>
                                        <div
                                            class="col-md-10 align-content-start">
                                            {{this.email}}
                                        </div>
                                    </td>
                                    <td>
                                        <div
                                            class="col-md-10 align-content-start">
                                            {{this.name}}
                                        </div>
                                    </td>
                                    <td>
                                        <div
                                            class="col-md-10 align-content-start">
                                            {{this._role}}
                                        </div>
                                    </td>
                                    <td>
                                        <div
                                            class="col-md-10 align-content-start">
                                            {{this._detail}}
                                        </div>
                                    </td>
                                    <td style='width: 20%' class='text-center'>
                                        <a
                                            href='/assignment/{{this.role.level}}/{{this._id}}'
                                            class='table-link'>
                                            <span class='fa-stack'>
                                                <i
                                                    class='fa fa-square fa-stack-2x'></i>
                                                <i
                                                    class='fa fa-pencil fa-stack-1x fa-inverse'></i>
                                            </span>
                                        </a>
                                        {{#compare this.role.level '===' 'wards'}}
                                        <a
                                            href='/api/v1/users/up/{{this._id}}'
                                            class='table-link'>
                                            <span class='fa-stack' style="color: #509177;">
                                                <i
                                                    class="fa fa-solid fa-arrow-up fa-stack-2x"></i>
                                            </span>
                                        </a>
                                        {{/compare}}
                                        {{#compare this.role.level '===' 'districts'}}
                                        <a
                                            href='/api/v1/users/down/{{this._id}}'
                                            class='table-link'>
                                            <span class='fa-stack' style="color: #509177;">
                                                <i
                                                    class="fa fa-solid fa-arrow-down fa-stack-2x"></i>
                                            </span>
                                        </a>
                                        {{/compare}}
                                    </td>
                                </tr>
                                {{/each}}
                                {{else}}
                                <tr>
                                    <td colspan='5'>
                                        <div class='alert alert-danger'>
                                            <strong>Không có dữ liệu</strong>
                                        </div>
                                    </td>
                                </tr>
                                {{/if}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>